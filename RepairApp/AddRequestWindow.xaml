<Window x:Class="RepairApp.AddRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить заявку" Height="400" Width="400">
    <Grid>
        <TextBox x:Name="FaultTypeText" ToolTip="Тип неисправности" Margin="10" />
        <TextBox x:Name="ProblemDescriptionText" ToolTip="Описание проблемы" Margin="10,50,10,0"/>
        <Button Content="Сохранить" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="10" Click="Save_Click"/>
    </Grid>
</Window>
