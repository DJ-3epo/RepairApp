<Window x:Class="RepairApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Учет заявок на ремонт" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="RequestsGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  AutoGenerateColumns="True" Margin="10"/>
        <Button Content="Добавить заявку" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Margin="10,0,0,10" Width="150" Click="AddRequest_Click"/>
        <Button Content="Редактировать заявку" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Margin="170,0,0,10" Width="150" Click="EditRequest_Click"/>
        <Button Content="Обновить" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Margin="330,0,0,10" Width="150" Click="Refresh_Click"/>
    </Grid>
</Window>
